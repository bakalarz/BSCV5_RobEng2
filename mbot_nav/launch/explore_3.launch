<!-- https://husarion.com/tutorials/ros-tutorials/8-unknown-environment-exploration/ -->
<launch>
    <!-- configuation -->
    <arg name="RVIZ_CONF" default="$(find turtlebot_samples)/launch/turtlebot_exploration.rviz"/>
    <arg name="use_gazebo" default="true"/>
    <arg name="world_file" default="$(find turtlebot_gazebo)/worlds/willowgarage.world"/>

    <!-- launching gazebo -->
    <include if="$(arg use_gazebo)" file="$(find turtlebot_gazebo)/launch/turtlebot_world.launch">
        <arg name="world_file" value="$(arg world_file)"/>
        <arg name="gui" default="true"/>
    </include>

    <param if="$(arg use_gazebo)" name="use_sim_time" value="true"/>

    <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg RVIZ_CONF)" />

    <!-- start of gmapping_demo -->
    <arg name="3d_sensor" default="$(env TURTLEBOT_3D_SENSOR)"/>
    <!-- r200, kinect, asus_xtion_pro -->
    <arg name="custom_gmapping_launch_file" default="$(find turtlebot_navigation)/launch/includes/gmapping/$(arg 3d_sensor)_gmapping.launch.xml"/>
    <include file="$(arg custom_gmapping_launch_file)"/>

    <!-- same as below -->
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
        <rosparam file="$(find mbot_nav)/param/explore_3/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find mbot_nav)/param/explore_3/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find mbot_nav)/param/explore_3/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find mbot_nav)/param/explore_3/global_costmap_params.yaml" command="load" />
    </node>

    <node pkg="frontier_exploration" type="explore_client" name="explore_client" output="screen"/>

    <node pkg="frontier_exploration" type="explore_server" name="explore_server" output="screen">
        <param name="frequency" type="double" value="1.0"/>
        <param name="goal_aliasing" type="double" value="0.5"/>
        <rosparam ns="explore_costmap" subst_value="true" file="$(find mbot_nav)/param/explore_3/costmap_exploration.yaml" command="load" />
    </node>

</launch>
